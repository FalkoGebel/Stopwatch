<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:StopwatchUiWpf.ViewModels"
             x:Class="StopwatchUiMauiApp.Views.MainView"
             Title="Stopwatch"
             x:DataType="vm:MainViewModel">
    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>
    
    <VerticalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Text="Reset" IsVisible="{Binding ResetButtonVisible}" Command="{Binding ResetCommand}" />
            <Button Grid.Column="1" Text="Start" IsVisible="{Binding StartButtonVisible}" Command="{Binding StartStopProcessCommand}" />
            <Button Grid.Column="1" Text="Pause" IsVisible="{Binding PauseButtonVisible}" Command="{Binding PauseStopProcessCommand}" />
            <Button Grid.Column="2" Text="Split Time" IsVisible="{Binding SplitTimeButtonVisible}" Command="{Binding StopSplitTimeCommand}" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>